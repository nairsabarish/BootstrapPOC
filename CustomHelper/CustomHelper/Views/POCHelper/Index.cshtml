@using CustomHelper.Components;
@model CustomHelper.Models.SampleClass
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-xs-12 col-md-6 center-block">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Heading...</h3>
                </div>
                <div class="panel-body">
                    <p>Panel body...</p>
                    @Html.TextBox5For(m => m.Email,
                                      POCHelpers.Html5InputTypes.email,
                                      "Email",
                                      "Enter Email Address",
                                      true,
                                      true)
                </div>
                <div class="panel-footer">
                    @Html.SubmitButton("Submit")
                </div>
            </div>
        </div>
    </div>
}

